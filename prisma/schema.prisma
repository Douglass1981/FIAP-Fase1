generator client {
  provider        = "prisma-client-js"
    output   = "../src/generated/prisma-client-js"
}

datasource db {
  provider = "sqlite"
   url      = env("DATABASE_URL")
}

model Usuario {
  id        Int   @id @default(autoincrement())
  nome      String
  email     String @unique // Adicione @unique para garantir que o email seja Ãºnico
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("usuario")
  UsuarioBanco UsuarioBanco[]
}


model Banco {
  id        Int   @id @default(autoincrement())
  nome      String
  logoBase64 String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("banco")
  UsuarioBanco UsuarioBanco[]
  Transacoes Transacoes[]
}


model UsuarioBanco {
  id        Int   @id @default(autoincrement())
  usuario Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId Int
  banco Banco @relation(fields: [bancoId], references: [id])
  bancoId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("usuarioBanco")
}

model TipoTransacoes {
  id        Int   @unique
  descricao String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("tipotransacoes")
  Transacoes Transacoes[]
}

model Categorias {
  id        Int   @id @default(autoincrement())
  nome String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("categorias")
  Transacoes Transacoes[]
}

model Transacoes {
  id        Int   @id @default(autoincrement())
  data DateTime
  descricao String
  valor Decimal
  tipo TipoTransacoes @relation(fields: [tipoId], references: [id])
  tipoId Int
  categoria Categorias @relation(fields: [categoriaId], references: [id])
  categoriaId Int
  bancos Banco @relation(fields: [bancoid], references: [id])
  bancoid Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("transacoes")
}


